<!-- Modal Update User-->
<div class="modal fade" id="modalUpdateUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cập nhật người dùng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmUpdateUser">
                    <div class="row">
                        <div class="form-group col">
                            <label class="control-label">Tên</label>
                            <input id="txtFirstNameUpdate" name="txtFirstName" class="form-control" />
                        </div>
                        <div class="form-group col">
                            <label class="control-label">Họ</label>
                            <input id="txtLastNameUpdate" name="txtLastName" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ngày sinh</label>
                        <input type="date" id="txtDobUpdate" name="txtDob" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input id="txtEmailUpdate" name="txtEmail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Số điện thoại</label>
                        <input id="txtPhoneNumberUpdate" name="txtPhoneNumber" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCloseUpdate" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" id="btnSaveUpdate" class="btn btn-primary">Lưu lại</button>
            </div>
        </div>
    </div>
</div>
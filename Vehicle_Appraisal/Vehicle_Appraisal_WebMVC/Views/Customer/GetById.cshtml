@using Vehicle_Appraisal_WebApi.ViewModels
@model CustomerVM
@{
    Layout = Layout;
}

<div class="content-wrapper">


    <!-- Content Wrapper. Contains page content -->
    <div class="content">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1><a href="/customer/GetAll">CUSTOMER</a></h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
                            <li class="breadcrumb-item"><a href="/customer/GetAll">Customer</a></li>
                            <li class="breadcrumb-item active">GetById</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <div class="card-header">
            <a id="btn-create" class="btn btn-primary" href="/customer/insert">
                <i class="far fa-plus-square"></i>
                Create
            </a>
        </div>
        <form asp-action="GetById" method="get">
            <div class="input-group mb-3" style="width:300px; margin-left:1.2rem">
                <input type="text" name="Id" class="form-control" placeholder="Input ID" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                <div class="input-group-append">
                    <button type="submit" class="input-group-text btn-primary" id="basic-addon2">Get Customer</button>
                </div>
            </div>
        </form>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Date</th>
                                            <th>First Name</th>
                                            <th>LastName</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Address1</th>
                                            <th>Address2</th>
                                            <th>City</th>
                                            <th>Country</th>
                                            <th>Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            <tr>
                                                <td>
                                                    @Model.Id
                                                </td>
                                                <td>
                                                    @Model.CreateAt.ToString("dd/MM/yyyy")
                                                </td>
                                                <td>
                                                    @Model.FirstName
                                                </td>
                                                <td>
                                                    @Model.LastName
                                                </td>
                                                <td>
                                                    @Model.Phone
                                                </td>
                                                <td>
                                                    @Model.Email
                                                </td>
                                                <td>
                                                    @Model.Address1
                                                </td>
                                                <td>
                                                    @Model.Address2
                                                </td>
                                                <td>
                                                    @Model.City
                                                </td>
                                                <td>
                                                    @Model.Country
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "update", "customer", new
                                               {
                                                   Model.Id,
                                                   Model.CreateAt,
                                                   Model.FirstName,
                                                   Model.LastName,
                                                   Model.Phone,
                                                   Model.Email,
                                                   Model.Address1,
                                                   Model.Address2,
                                                   Model.City,
                                                   Model.Country
                                               }) |
                                                    @Html.ActionLink("Details", "Details", new { }) |
                                                    <a href="@Url.Action("DeleteAction","customer",new { Model.Id })" type="text" class="text-primary" onclick="return confirm('Are you sure want delete customer with ID = @Model.Id')">
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
</div>


@model VehicleModelMVC
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vehicle_Appraisal_WebMVC</title>
    <!-- Font Awesome -->
    <link href="~/ThemeLTE/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/ThemeLTE/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" rel="stylesheet">
</head>
<body>
    <div class="content">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>EDIT VEHICLE</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
                            <li class="breadcrumb-item"><a href="/vehicle/GetAll">Vehicle</a></li>
                            <li class="breadcrumb-item active">Edit</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <form asp-action="UpdateAction" asp-controller="vehicle" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="card card-primary">
                            <div class="card-body">
                                <input type="hidden" asp-for="Id">
                                <input type="hidden" asp-for="CreateAt" />
                                <label for="inputCustomer">Customer</label>
                                <div class="input-group">
                                    <select id="inputCustomer" asp-for="CustomerVM.FirstName" class="Chosen" style="font-size:6.5rem">
                                        @foreach (var item in Model.CustomerVMs)
                                        {
                                            <option>@Html.DisplayFor(Model => item.FirstName)</option>
                                        }
                                    </select>
                                    <select id="inputCustomer" asp-for="CustomerVM.LastName" class="Chosen" style="font-size:8.5rem">
                                        <option></option>
                                        @foreach (var item in Model.CustomerVMs)
                                        {
                                            <option>@Html.DisplayFor(Model => item.LastName)</option>
                                        }
                                    </select>
                                </div>
                                <label for="inputMake">Make</label>
                                <div>
                                    <select id="inputMake" asp-for="MakeVM.Name" class="Chosen" style="font-size:11.5rem">
                                        <option></option>
                                        @foreach (var item in Model.MakeVMs)
                                        {
                                            <option>@Html.DisplayFor(Model => item.Name)</option>
                                        }
                                    </select>
                                </div>
                                <label for="inputModel">Model</label>
                                <div>
                                    <select id="inputModel" asp-for="ModelVM.Name" class="Chosen" style="font-size:13.1rem">
                                        <option></option>
                                        @foreach (var item in Model.ModelVMs)
                                        {
                                            <option>@Html.DisplayFor(Model => item.Name)</option>
                                        }
                                    </select>
                                </div>
                                <label for="inputOdometer">Odometer</label>
                                <input type="text" asp-for="Odometer" id="inputOdometer" class="form-control">
                                <label for="inputVIN">VIN</label>
                                <input type="text" asp-for="VIN" id="inputVIN" class="form-control">
                                <label for="inputEngine">Engine</label>
                                <input type="text" asp-for="Engine" id="inputEngine" class="form-control">
                                <label for="inputUsers">Users</label>
                                <div>
                                    <select id="inputUsers" asp-for="AppUserVM.FullName" class="Chosen" style="font-size:4rem">
                                        <option></option>
                                        @foreach (var item in Model.AppUserVMs)
                                        {
                                            <option>@Html.DisplayFor(Model => item.FullName)</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a href="/vehicle/GetAll" class="btn btn-secondary">Cancel</a>
                        <input type="submit" value="Change Vehicle" class="btn btn-success">
                    </div>
                </div>
            </form>

        </section>
        <!-- /.content -->
    </div>
    <!-- jQuery -->
    <script src="~/ThemeLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/ThemeLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/ThemeLTE/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/ThemeLTE/dist/js/demo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
    <script type="text/javascript">
        $(".Chosen").chosen();
    </script>
</body>
</html>

